<% include ../partials/header %>

<div class="container-fluid">
<h1>Submit a new Job</h1> 
   
<!--  JOB BUTTONS  -->
<form action="/jobs" method="POST">  
    <div class="row btn-wrapper"> 
        <div class="col-xs-4 col-md-4" data-toggle="buttons">
    <label id="walkBtn" class="btn btn-primary button jobBtn fade">
      <input type="radio" name="job"  value="Walk" autocomplete="off"> Walk
    </label>
        </div>
        <div class="col-xs-4 col-md-4" data-toggle="buttons">
    <label id="driveBtn" class="btn btn-primary button jobBtn fade">
      <input type="radio" name="job"  value="Drive" autocomplete="off"> Drive
    </label>
        </div>
        <div class="col-xs-4 col-md-4" data-toggle="buttons">
    <label class="btn btn-primary button jobBtn fade">
      <input type="radio" name="job" id="Copy" value="option 3" autocomplete="off"> Copy
    </label>
    </div>   
  </div>
  
  
<!--   WALK TIMES --> 
  <div class="row btn-wrapper time-group walk-times faded">
    <div class="col-xs-4" data-toggle="buttons">
  <label class="btn timeBtn btn-primary button fade">
    <input class="timeBtn" type="radio" name="time" id="option1" value="10:00 am"autocomplete="off" checked> 10:00 am 
  </label>
    </div>
    <div class="col-xs-4" data-toggle="buttons">
  <label class="btn timeBtn btn-primary button fade">
    <input class="timeBtn" type="radio" name="time" id="option2" value="1:30 pm" autocomplete="off"> 1:30 pm
  </label>
    </div>
    <div class="col-xs-4" data-toggle="buttons">
  <label class="btn timeBtn btn-primary button fade">
    <input class="timeBtn" type="radio" name="time" id="option3" value="3:20 pm" autocomplete="off"> 3:20 pm
  </label>
    </div>
  </div>
  
<!--   DRIVE TIMES -->
  <div class="row btn-wrapper drive-times time-group faded">
    <div class="col-xs-4" data-toggle="buttons">
  <label class="btn timeBtn btn-primary button fade">
    <input  type="radio" name="time" id="option1" value="11:00 am"autocomplete="off" checked> 11:00 am 
  </label>
    </div>
    <div class="col-xs-4" data-toggle="buttons">
  <label class="btn timeBtn btn-primary button fade">
    <input type="radio" name="time" id="option2" value="2:00 pm" autocomplete="off"> 2:00 pm
  </label>
    </div>
    <div class="col-xs-4" data-toggle="buttons">
  <label class="btn timeBtn btn-primary button fade">
    <input type="radio" name="time" id="option3" value="ASAP" autocomplete="off"> ASAP
  </label>
    </div>
  </div>
  
<!-- LOCATIONS   -->
  <div class="row btn-wrapper loc-group faded">
    <div class="col-xs-4" data-toggle="buttons">
  <label class="btn locBtn btn-primary button fade">
    <input class="locBtn" type="radio" name="loc" id="option1" value="Circuit Court"autocomplete="off" checked> Circuit Court
  </label>
    </div>
    <div class="col-xs-4" data-toggle="buttons">
  <label class="btn locBtn btn-primary button fade">
    <input class="locBtn" type="radio" name="loc" id="option2" value="District Court" autocomplete="off"> District Court
  </label>
    </div>
    <div class="col-xs-4" data-toggle="buttons">
  <label class="btn locBtn btn-primary button fade">
    <input class="locBtn" type="radio" name="loc" id="option3" value="County Clerk" autocomplete="off"> County Clerk
  </label>
    </div>
  </div>
  
<!-- ADDITIONAL COMMENTS / SUBMIT -->
  <div class="form-group faded additionalComments">
    <label for="additionalComments"><p>Additional Instructions</p></label>
  <textarea id="additionalComments" class="form-control" name="additionalComments" rows="5"></textarea>
    
     <button id="submit" class="btn btn-primary button">Submit</button>
  </div>
   
  
  
  
 
</form>
</div>
<hr>


  <div class="container jobList">
    <h3>Current Jobs</h3>
  <% var count = 0; %>
  <% for(var i= jobs.length-1; i>=0; i--) { %>
  <% count++ %>
  <div class="job-container">
    <div class="row">
      <div class="col-xs-6 pull-left">
        <span class="pull-left"><em><%=count%>.</em></span>
        <p><strong>Requester:</strong>
          <a href="/users/<%=jobs[i].requester.id%>"><%=jobs[i].requester.name %></a>
        </p>
      </div>
      <div class="col-xs-2 pull-left">
        <p><strong>C/M#: </strong>614424. 000001</p> 
      </div>
      <div class="col-xs-4 pull-right">
        <p><em>Submitted: <%=moment(jobs[i].createdAt).utcOffset(-4).format("dddd h:mm a")%></em></p> 
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-xs-6">
        <div class="pull-right row-labels">
          <p><strong>Job:</strong> </p>
          <p><strong>Time:</strong> </p>
          <p><strong>Location:</strong> </p>
          <p><strong>Addional Instructions:</strong> </p>
      
        </div>
      </div>
      <div class="col-xs-6">
        <div class="pull-left row-info">
          <p><%=jobs[i].job%></p>
          <p><%=jobs[i].time%></p>
          <p><%=jobs[i].loc%></p>
          <p><%=jobs[i].additionalComments%></p>
        </div>
      </div>
      <div class="pull-right">
        <div class="col-xs-12">
        <a href='/jobs/<%= jobs[i]._id %>'>More Info</a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>

</div>





<% include ../partials/footer %>
