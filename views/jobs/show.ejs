<% include ../partials/header %>

<h1>Job details</h1>
<div class="job-container">
    <div class="row">
      <div class="col-xs-6 pull-left">
        <span class="pull-left"><em>.</em></span>
        <p>
          <strong>Requester:</strong> 
          <a href="/users/<%=job.requester.id%>"><%= job.requester.name %></a>
        </p>
      </div>
      <div class="col-xs-2 pull-left">
        <p><strong>C/M#: </strong>614424. 000001</p> 
      </div>
      <div class="col-xs-4 pull-right">
        <p><em>Submitted: <%=moment(job.createdAt).format("dddd LT")%></em></p> 
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-xs-6">
        <div class="pull-right row-labels">
          <p><strong>Job:</strong> </p>
          <p><strong>Time:</strong> </p>
          <p><strong>Location:</strong> </p>
          <p><strong>Addional Instructions:</strong> </p>
      
        </div>
      </div>
      <div class="col-xs-6">
        <div class="pull-left row-info">
          <p><%=job.job%></p>
          <p><%=job.time%></p>
          <p><%=job.loc%></p>
          <p><%=job.additionalComments%></p>
        </div>
      </div>
    </div>
</div>
 
    <div class="pull-left">
        <div class="col-xs-12">
            <a href='/jobs'>Go back</a>
        </div>       
    </div>
    <div class="pull-right">
        <div class="col-xs-12">
            <a href="/jobs/<%=job.id%>/edit" class="btn btn-warning">Edit Job</a>
            <button class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter">Delete Job</button>
            
        </div>       
    </div>
    
    
    <!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Confirm Delete</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this job?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <form class="delete-form" action="/jobs/<%=job.id%>?_method=DELETE" method="POST">
                <input class="btn btn-danger" type="submit" value="Delete Job">
        </form>
      </div>
    </div>
  </div>
</div>
        

<% include ../partials/footer %>